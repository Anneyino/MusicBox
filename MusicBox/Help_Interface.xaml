        xmlns:local="clr-namespace:MusicBox"
        mc:Ignorable="d"
        Title="帮助" Height="424.688" Width="443.215" ResizeMode="NoResize" Background="#FFD0D90F">
    <Grid Margin="0,0,3.6,3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
